<div class="container-fluid" style="padding-top: 30px;">
  <div class="row justify-content-center">
    <div class="col-sm-5 col-sm-offset-2">

      <%= form_with model: @user do |form| %>
        <div class="card">
          <div class="card-header container">
            <div class="row align-items-center">
              <div class="col-8 text-start">
                <h5 style="margin-bottom: 0;">Nuevo Colaborador</h5>
              </div>
              <div class="col-4 text-end">
                <% if current_user.admin %>
                  <label for="adminInput" class="form-label" style="padding-right: 10px; margin: 0;">Administrador</label>
                  <%= form.check_box :admin, class: "form-check-input", id: "adminInput" %>
                <% end %>
              </div>
            </div>
          </div>

          <div class="card-body content">
            <div class="row">
              <div class="col-6">
                <label class="form-label" style="padding-left: 10px;">Nombres</label>
                <%= form.text_field :first_name, class: "form-control" %>
              </div>
              <div class="col-6">
                <label class="form-label" style="padding-left: 10px;">Apellidos</label>
                <%= form.text_field :last_name, class: "form-control" %>
              </div>
              <div class="col-6" style="padding-top: 10px;">
                <label class="form-label" style="padding-left: 10px;">Correo</label>
                <%= form.text_field :email, class: "form-control" %>
              </div>
              </br>
              <div class="col-6" style="padding-top: 10px;">
                <label class="form-label" style="padding-left: 10px;">Telefono</label>
                <%= form.text_field :phone, class: "form-control" %>
              </div>
              <div class="col-6" style="padding-top: 10px;">
                <label class="form-label" style="padding-left: 10px;">Contraseña</label>
                <%= form.password_field :password, class: "form-control" %>
              </div>
              <div class="col-6" style="padding-top: 10px;">
                <label class="form-label" style="padding-left: 10px;">Confirmar Contraseña</label>
                <%= form.password_field :password_confirmation, class: "form-control" %>
              </div>
              <div class="col-12" style="padding-top: 10px;">
                <label class="form-label" style="padding-left: 10px;">Dirección</label>
                <%= form.text_area :address, class: "form-control", rows: "3" %>
              </div>
            </div>
          </div>

          <div class="card-footer">
            <div class="row">
              <div class="col-4"></div>
              <div class="col-4">
                <%= link_to users_path do %>
                  <button type="button" class="btn btn-secondary" style="width:100%"> Cancelar </button>
                <% end %>
              </div>
              <div class="col-4">
                <%= form.submit "Crear", class: "btn btn-success", style: "width:100%" %>
              </div>
            </div>
          </div>

        </div>
      <% end %>

    </div>
  </div>
</div>
