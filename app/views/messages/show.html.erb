<div class="container-fluid" style="padding-top: 30px;">
  <div class="row justify-content-center">
    <div class="col-sm-4 col-sm-offset-2">

      <div class="card">

        <div class="card-header container">
          <div class="row align-items-center">
            <div class="col-9 text-start">
              <h5 style="margin-bottom: 0;"><%= @message.name %></h5>
            </div>
            <div class="col-3 text-end">
              <%= link_to messages_path, class: "btn btn-secondary" do %>
                <i class="bi bi-arrow-left-square"></i>
              <% end %>
            </div>
          </div>
        </div>

        <div class="card-body">
          <div class="row">

            <div class="col-6">
              <label for="exampleFormControlInput1" class="form-label">Correo</label>
              <input class="form-control" type="text" value="<%= @message.email %>" aria-label="Disabled input example" disabled readonly>
            </div>
            <div class="col-6">
              <label for="exampleFormControlInput1" class="form-label">Telefono</label>
              <input class="form-control" type="text" value="<%= @message.phone %>" aria-label="Disabled input example" disabled readonly>
            </div>
            <div class="col-12" style="padding-top: 10px;">
              <label for="exampleFormControlInput1" class="form-label">Titulo</label>
              <input class="form-control" type="text" value="<%= @message.title %>" aria-label="Disabled input example" disabled readonly>
            </div>
            <div class="col-12" style="padding-top: 10px;">
              <label for="exampleFormControlInput1" class="form-label">Mensaje</label>
              <textarea class="form-control" aria-label="Disabled input example" rows="3" disabled readonly><%= @message.message %></textarea>
            </div>

          </div>
        </div>

      </div>

    </div>
  </div>
</div>
