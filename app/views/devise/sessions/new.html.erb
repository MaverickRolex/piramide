<div class="container-fluid" style="padding-top: 30px;">
  <div class="row justify-content-center">
    <div class="col-sm-4 col-sm-offset-2">

      <div class="card text-center">
        <h5 class="card-header">Inicio de Sesión</h5>
        <%= image_tag("sayagbeh_color.png", class:"card-img-top", alt:"...", style:"padding-top:30px") %>
        <div class="card-body">
          <%= form_for(@user, url: user_session_path(@user)) do |f| %>
            <div class="field" style="padding-top: 30px;">
              <%= f.label :Correo %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
          
            <div class="field">
              <%= f.label :Contraseña %><br />
              <%= f.password_field :password, autocomplete: "current-password" %>
            </div>
              
            <% if devise_mapping.rememberable? %>
              <div class="field" style="padding-top: 30px;">
                <%= f.check_box :remember_me %>
                <%= f.label :Recordar_Cuenta %>
              </div>
            <% end %>
            
            <div class="actions" style="padding-top: 30px;padding-bottom: 30px;">
              <%= f.submit "INGRESAR" %></a>
            </div>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>